<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="[팝니다]교양 책 팝니다"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_weight="1"
        />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_below="@id/title"
           android:layout_weight="1"
           >
           <TextView
               android:id="@+id/nickname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="비만인"
               android:layout_margin="5dp"
               />
           <TextView
               android:id="@+id/date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2016-11-21"
               android:layout_margin="5dp"
               />
           <TextView
               android:id="@+id/lookup"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="조회:12"
               android:layout_margin="5dp"
               />
       </LinearLayout>
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:maxLines="5"
            android:padding="10dp"
            android:text="FromBufferLocked: unknown buffer: 0xa3643180
11-03 13:55:46.370 6377-6377/com.ktnu.ktnuapp W/ViewRootImpl: Cancelling event due to no window focus: MotionEvent { action=ACTION_CANCEL, actionButton=0, id[0]=0, x[0]=125.24414, y[0]=275.31738, toolType[0]=TOOL_TYPE_FINGER, buttonState=0, metaState=0, flags=0x0, edgeFlags=0x0, pointerCount=1, historySize=0, eventTime=383253, downTime=382067, deviceId=0, source=0x1002 }
11-03 13:55:46.370 6377-6377/com.ktnu.ktnuapp W/ViewRootImpl: Cancelling event due to"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_below="@id/title"
            android:layout_weight="1"
            android:background="#88888888"
            android:gravity="right|center"
            android:paddingRight="20dp"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하트:5개"
            />
            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글:5개"
                />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>